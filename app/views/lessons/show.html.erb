<h1><%= @lesson.title %></h1>

<div class="mb-4">
  <p><strong>Teaching Language:</strong> <%= @lesson.teaching_language %></p>
  <p><strong>Known Language:</strong> <%= @lesson.known_language %></p>
  <p><strong>Level:</strong> <%= @lesson.level %></p>
  <p><strong>Available Days:</strong> <%= @lesson.available_days %></p>
  <p><strong>Meeting Platform:</strong> <%= @lesson.meeting_platform %></p>
  <p><strong>Teacher:</strong> <%= @lesson.user.full_name %></p>
</div>

<% if current_user == @lesson.user %>
  <div class="flex space-x-2 mb-4">
    <%= link_to 'Edit', edit_lesson_path(@lesson), class: 'btn btn-primary' %>
    <%= link_to 'Delete', lesson_path(@lesson), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', 'data-turbo' => false %>
  </div>
<% end %>

<div>
  <% if current_user && current_user.role == 'student' && current_user != @lesson.user %>
    <%= button_to "Book this Lesson", bookings_path(lesson_id: @lesson.id), method: :post, class: "btn btn-primary" %>
  <% end %>
  <%= link_to 'Back', root_path, class: 'btn btn-secondary' %>
</div>